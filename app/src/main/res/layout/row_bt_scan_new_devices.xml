<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp">

    <TextView
        android:id="@+id/tv_bt_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:text="Device Name"
        android:textSize="18sp"
        android:textColor="@color/field_text"/>
    <TextView
        android:id="@+id/tv_bt_address"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/tv_bt_name"
        android:text="Device Adress"
        android:textColor="@color/field_text"/>

    <ImageView
        android:id="@+id/iv_bt_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/tv_bt_name"
        android:layout_alignBottom="@+id/tv_bt_address"
        android:layout_alignParentEnd="true"
        android:src="@drawable/ic_bt_connected"/>

</RelativeLayout>