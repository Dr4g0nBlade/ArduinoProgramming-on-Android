<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:scaleX="-1"
    android:padding="8dp"
    android:layout_margin="6dp"
    android:background="@drawable/ic_mess_bubble"
    android:layout_marginStart="@dimen/activity_horizontal_margin"
    android:layout_gravity="end"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tv_mess_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:scaleX="-1"
        android:maxWidth="270dip"
        android:gravity="top"
        android:text="Help, I will like to get some answers about how you are doing that transformation of array to list!" />

    <TextView
        android:id="@+id/tv_mess_date"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scaleX="-1"
        android:gravity="end"
        android:textSize="10dp"
        android:text="10/02/2015 15:00" />

    <ImageButton
        android:id="@+id/ib_custom_attach"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:scaleX="-1"
        android:visibility="visible"
        android:src="@color/blockly_trash_bg" />

</LinearLayout>