<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <ImageView
        android:id="@+id/iv_avatar"
        android:layout_width="128dp"
        android:layout_height="128dp"
        android:src="@mipmap/ic_no_avatar"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true" />

    <EditText
        android:id="@+id/et_nickname"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@+id/iv_avatar"
        android:layout_toRightOf="@+id/iv_avatar"
        android:layout_alignTop="@+id/iv_avatar"
        android:hint="@string/hint_nickname"/>

    <TextView
        android:id="@+id/tv_id"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@+id/iv_avatar"
        android:layout_toRightOf="@+id/iv_avatar"
        android:layout_below="@+id/tv_email"
        android:text="ID: 0"/>

    <TextView
        android:id="@+id/tv_email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@+id/iv_avatar"
        android:layout_toRightOf="@+id/iv_avatar"
        android:layout_below="@+id/et_nickname"
        android:text="Current email: email@domain.com"/>

    <Button
        android:id="@+id/bt_change_login"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@+id/iv_avatar"
        android:layout_alignBottom="@+id/iv_avatar"
        android:text="@string/bt_change_login"
        android:layout_toRightOf="@+id/iv_avatar" />

    <ExpandableListView
        android:id="@+id/elv_boards"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/bt_change_login"
        android:layout_centerVertical="true"
        android:headerDividersEnabled="false">

    </ExpandableListView>




</RelativeLayout>