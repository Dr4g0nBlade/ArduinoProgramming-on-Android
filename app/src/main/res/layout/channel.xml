<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/iv_channel_avatar"
        android:layout_width="96dp"
        android:layout_height="96dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:src="@mipmap/ic_no_avatar" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/iv_channel_avatar"
        android:layout_alignBottom="@id/iv_channel_avatar"
        android:layout_toEndOf="@id/iv_channel_avatar"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_channel_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:textSize="20sp"
            android:text="NAMENAME" />

        <TextView
            android:id="@+id/tv_channel_preview"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Preview Message" />

    </LinearLayout>
</RelativeLayout>